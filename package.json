{
  "name": "barberia-backend",
  "version": "1.0.0",
  "description": "Sistema de turnos para barbería - PRODUCCIÓN",
  "main": "app.js",
  "type": "commonjs",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "init-db": "node scripts/initDB.js",
    "deploy-setup": "node deploy-setup.js",
    "railway-init": "npm run deploy-setup && npm run init-db && npm start",
    "test-prod": "set NODE_ENV=production&& node app.js",
    "install-deps": "npm install mysql2 bcryptjs express cors helmet jsonwebtoken multer express-rate-limit dotenv"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^6.11.2",
    "helmet": "^6.2.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.15.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "barberia",
    "turnos",
    "api",
    "production",
    "secure"
  ],
  "author": "Elite Developer",
  "license": "MIT"
}
